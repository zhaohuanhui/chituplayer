<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_back">
                </ImageView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login in"
                android:textSize="17dp"
                android:layout_centerInParent="true"
                android:textColor="@color/color333333">
            </TextView>
         <LinearLayout
             android:layout_marginRight="10dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:padding="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Register"
                 android:textSize="14dp"
                 android:textColor="@color/color333333">
             </TextView>
         </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
   <LinearLayout
       android:layout_gravity="center_vertical"
       android:layout_margin="10dp"
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@drawable/shape_edit_bg">
       <TextView
           android:layout_gravity="center_vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Username："
           android:textColor="@color/color22222"
           android:textSize="14dp">
       </TextView>
       <EditText
           android:id="@+id/et_userName"
           android:layout_gravity="center_vertical"
           android:hint="Please input Username"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="14dp"
           android:background="@android:color/transparent">
       </EditText>
   </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_edit_bg">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password："
            android:textColor="@color/color22222"
            android:textSize="14dp">
        </TextView>
        <EditText
            android:id="@+id/et_password"
            android:inputType="textPassword"
            android:layout_gravity="center_vertical"
            android:hint="Please enter password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:background="@android:color/transparent">
        </EditText>
        <ImageView
            android:id="@+id/iv_ishow"
            android:layout_gravity="center_vertical"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/ic_ishow_n">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_isCheck"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_isCheck"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_ischeck_n">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember password"
            android:textSize="13dp"
            android:textColor="@color/color999999">
        </TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>
        <TextView
            android:id="@+id/tv_forgot"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:textColor="@color/color999999"
            android:textSize="13dp">
        </TextView>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        app:cornerRadius="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Login in"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:textColor="@color/colorFFFFFFF"
        android:backgroundTint="@color/colorPrimary">
    </com.google.android.material.button.MaterialButton>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:padding="5dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="— Sign in with —"
            android:layout_centerHorizontal="true">
        </TextView>
    </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/ic_facebook">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/ic_facebook">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/ic_facebook">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/ic_facebook">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <LinearLayout
             android:padding="5dp"
             android:layout_centerInParent="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="登入即表示您同意"
                 android:textSize="11dp"
                 android:textColor="@color/color999999"
                 android:layout_centerHorizontal="true">
             </TextView>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:text="HD Movies Box Pro的使用条件"
                 android:textSize="11dp"
                 android:textColor="@color/color1877F2"
                 android:layout_centerHorizontal="true">
             </TextView>
         </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>